double_buffer yes

background yes
own_window yes
own_window_transparent no

own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

draw_borders no
draw_shades no

gap_x -5
gap_y 2
alignment top_middle

update_interval 1
default_color white

use_xft yes
xftfont Sans:bold:size=7
use_spacer none

minimum_size 1920 0
maximum_width 0

override_utf8_locale yes

color1 B0E0E6
color2 00ff00
color3 ffff00
color4 ff0000

